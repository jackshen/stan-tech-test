{
  "compilerOptions": {
    "allowJs": false,
    "baseUrl": "./",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "./dist/",
    "paths": {
      "#api/*": ["./src/api/*"],
      "#assets/*": ["./src/assets/*"],
      "#components/*": ["./src/components/*"],
      "#pages/*": ["./src/pages/*"],
      "#theme/*": ["./src/theme/*"]
    },
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "target": "es6",
    "typeRoots": ["./src/@types", "./node_modules/@types"]
  },
  "exclude": ["./cypress"]
}
